<div class="no-background text-lighter-purple" id="spree-header">
  <header class="no-background no-padding-bottom" id="header" data-hook>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10 col-xs-12 text-center">
          <div class="col-md-2 buffer-margin-15">
            <%= link_to "CapitolDrugs.com", root_path, class: "text-decoration-none" %>
          </div>
          <ul class="col-md-8 list-inline list-style-pipe-after buffer-margin-15">
              <li>West Hollywood</li>
              <li>Sherman Oaks</li>
              <li>800 819 9098</li>
              <li>info@capitoldrugs.com</li>
          </ul>
          <ul class="col-md-2 no-padding list-unstyled list-inline" style="margin: 7px 0;">
              <li class="font-size-25px"><%= link_to fa_icon("facebook-official"), "#" %></li>
              <li class="font-size-25px"><%= link_to fa_icon("twitter"), "#" %></li>
              <li class="font-size-25px"><%= link_to fa_icon("foursquare"), "#" %></li>
              <li class="font-size-25px"><%= link_to fa_icon("yelp"), "#" %></li>
          </ul>
        </div>
        <div class="col-md-2 col-xs-12">
          <%= link_to "Login / Register", new_spree_user_session_path, class: "btn btn-blue col-xs-12 no-border-radius no-border-bottom text-uppercase text-bold font-size-80 buffer-padding-20" %>
        </div>
      </div>
      <div class="row">
          <%= render partial: 'spree/shared/capitol-drugs/nav_bar' %>
      </div>
    </div>
  </header>
  <div>
    <%= render partial: 'spree/shared/capitol-drugs/main_nav_bar' if store_menu? %>
  </div>
</div>