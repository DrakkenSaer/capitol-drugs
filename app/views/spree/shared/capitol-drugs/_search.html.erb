<%= form_tag spree.products_path, method: :get do %>
    <div class="col-xs-10 no-padding">
        <%= search_field_tag :keywords, params[:keywords], placeholder: Spree.t(:search), class: "form-control text-lighter-purple no-border-radius border-light-blue-1 no-border-right buffer-padding-25 background-blue", style: "height: 60px;" %>
    </div>
    <div class="col-xs-2 no-padding">
        <%= submit_tag Spree.t(:search), name: nil, class: "btn background-blue no-border-radius border-light-blue-1 no-border-left", style: "height: 60px; width: 100%;" %>
    </div>
<% end %>