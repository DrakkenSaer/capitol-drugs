<div class="row">
  <div data-hook="<%= address_type[0..3] %>_address_wrapper" class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">
          <%= Spree.t("#{address_type}_address") %>
        </h1>
      </div>

      <div class="panel-body">
        <%= f.fields_for "#{address_type[0..3]}_address", (@user.send("#{address_type[0..3]}_address") || Spree::Address.default(@user, "#{address_type[0..3]}")) do |ba_form| %>
          <% ba_form.object ||= Spree::Address.new(country: Spree::Country.new) %>
          <%= render partial: 'spree/admin/shared/address_form', locals: { f: ba_form, type: "#{address_type}" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
