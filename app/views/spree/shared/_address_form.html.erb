<div class="row">
  <div data-hook="<%= address_type[0..3] %>_address_wrapper">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= Spree.t("#{address_type}_address") %>
        </h3>
      </div>

      <div class="panel-body">
        <%= f.fields_for "#{address_type[0..3]}_address", (@user.send("#{address_type[0..3]}_address") || Spree::Address.default(@user, "#{address_type[0..3]}")) do |form| %>
          <% form.object ||= Spree::Address.new(country: Spree::Country.new) %>
          <%= render partial: 'spree/address/form', locals: { form: form, address_type: "#{address_type}", address: form.object } %>
          <p>
            <%= f.submit Spree.t(:update), :class => 'btn btn-primary' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
