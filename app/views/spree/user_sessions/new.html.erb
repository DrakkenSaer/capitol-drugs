<% @body_id = 'login' %>
  <div class="panel-heading background-white border-none">
    <h1 class="background-white border-none text-blue fjalla-one text-uppercase"><%= Spree.t(:login_as_existing) %></h1>
    <hr/>
  </div>
  <!--Layout change -- Will this break something??-->
  <div class="col-md-5 <%= request.path == spree.login_path ? " " : " " %>">
    <div class="panel panel-default background-white border-none">
      <div id="existing-customer" class="panel-body border-none" data-hook="login">
        <% if flash[:alert] %>
          <div class="alert alert-danger">
            <%= flash[:alert] %>
          </div>
          <% end %>
            <%= render :partial => 'spree/shared/login' %>
              <div class="text-center">
              <span class='text-purple'><%= Spree.t(:or) %></span>
                <%= link_to Spree.t(:create_a_new_account), spree.signup_path %> |
                  <%= link_to Spree.t(:forgot_password), spree.recover_password_path %>
      </div>
      <div data-hook="login_extras"></div>
    </div>
  </div>
  </div>